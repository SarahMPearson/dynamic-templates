<!doctype>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dynamic Templates</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
  <nav>
    <a href="/checkers">Checkers</a>
  </nav>
    <h1 style="color:red;background-color:yellow;">Welcome to Dynamic Templates</h1>

    <h2>Multiply 3 * 3 = <%=3*3%> </h2>
    <h2>A Random number between 3 & 12 = <%= Math.floor(Math.random()*10+3) %></h2>

    <% var a =3, b =2 %>
    <p><%= a + b %></p>
    
    <% if(a===3) { %>
      <p> a is 3</p>
    <% } else{ %>
      <p> a not 3</p>
      <% } %>

      <% var fonts = ['Lobster', 'Calligraffitti', 'Luckiest Guy'] %>
      <% var colors = ['blue', 'green', 'yellow', 'orange', 'pink', 'red', 'purple'] %>
      <% for(var i=0; i < colors.length; i++) { %>
      <p style="font-family:<%= fonts[i%3] %>; color:<%= colors[i]%>;font-size:<%= 12 + (i*2) %>px;background-color:<%= ((i+1) < colors.length) ? colors[i+1]: colors[0] %>;"> <%= colors[i] %> </p> 
      <% } %>
 
   </body>
</html>
