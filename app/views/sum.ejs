<!doctype>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sum</title>
  </head>
  <body>
  <h1>Sum</h1>

  <% var sum = x + y + w + z %>
  <% var color = (sum%2) ? 'red' : 'coral' %>
  <h2 style="font-size: <%= fontsize %>;border:<%= borderwidth %>px dashed <%= bordercolor %>;" ><%= x %> + <%= y %> + <%= w %> + <%= z %> = <% sum %> 
  <span style="color:<%= color %>;"> <%= sum %></span>
  </h2>
  </body>
</html>

